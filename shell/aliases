# vim: set ft=sh:

alias a="cal"
alias aria="aria2c"
alias au="sudo pacman -Syu"
alias c="clear"
alias ctl="systemctl --user"
alias g="git"
alias gd="git diff"
alias gl="git log"
alias gs="git status"
alias ip="curl ipecho.net/plain;echo"
alias k="kubectl"
alias kprod="k config use-context prod"
alias kstaging="k config use-context staging"
alias ll="ls -aFhl"
alias mosh='TERM=xterm-256color mosh'
alias nr="npm run"
alias nrs="npm run --silent"
alias pg="pgcli -D"
alias pgl="pgcli -D local"
alias r="ranger"
alias ranm="rm -rf node_modules && rnm && rm yarn.lock"
alias rc="source ranger"
alias remove-lib="find . -name 'lib' -type d -prune -exec rm -rf '{}' +"
alias remove-node-modules="find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
alias se="sudoedit"
alias show-cursor='echo "\x1B[?25h"'
alias ssh='TERM=xterm-256color ssh'
alias t="tmux split-window -v -p 9 \; last-pane \; split-window -v -p 9 \; \
    last-pane \; split-window -v -p 9 \; last-pane \; split-window -v -p 9 \; \
    last-pane \; split-window -v -p 9 \; last-pane \; split-window -v -p 9 \; \
    last-pane \; split-window -v -p 9 \; last-pane \; split-window -v -p 9 \; \
    last-pane \; select-layout tiled"
alias tmn="tmux new -s main"
alias x='exit'
alias y="yarn"
alias z='fasd_cd -d'

# Functions
logs () {
    if [ $1 = "front-end" ]; then
        journalctl --user -f -o cat -u $1
    else
        journalctl --user -f -o cat -u $1 | npx bunyan -o short
    fi
}
